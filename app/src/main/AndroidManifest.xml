<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rizkykurniawan.jetpackpro.submission">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Submission1"
        android:allowBackup="true"
        tools:ignore="AllowBackup">
        <activity
            android:name="com.rizkykurniawan.jetpackpro.submission.ui.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rizkykurniawan.jetpackpro.submission.ui.tvshow.TVShowDetailActivity"
            android:label="@string/title_activity_t_v_show_detail"
            android:parentActivityName="com.rizkykurniawan.jetpackpro.submission.ui.home.HomeActivity"
            android:theme="@style/Theme.Submission1" />
        <activity
            android:name="com.rizkykurniawan.jetpackpro.submission.ui.movie.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName="com.rizkykurniawan.jetpackpro.submission.ui.home.HomeActivity"
            android:theme="@style/Theme.Submission1" />
        <activity android:name="com.rizkykurniawan.jetpackpro.submission.ui.home.HomeActivity" />
    </application>

</manifest>